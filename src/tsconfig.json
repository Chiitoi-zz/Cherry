{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "lib": [
            "ESNext",
            "ESNext.Array",
            "ESNext.AsyncIterable",
            "ESNext.Intl",
            "ESNext.Symbol",
            "DOM"
        ],
        "module": "commonjs",
        "outDir": "../dist",
        "paths": {
            "@constants": ["utility/constants"],
            "@utils": ["utility/utils"]
        },
        "target": "ES2020",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": false
    },
    "exclude": ["../node_modules", "../config.json"],
    "include": ["../src/**/*"],
}